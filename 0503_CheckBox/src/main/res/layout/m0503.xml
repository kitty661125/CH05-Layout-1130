<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".M0503">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Gray"
        android:orientation="vertical"
        android:padding="@dimen/p20">

        <CheckBox
            android:id="@+id/m0503_chb01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Silver"
            android:buttonTint="@color/purple_500"
            android:checked="true"
            android:text="@string/m0503_chb01"
            android:textSize="@dimen/fontsize"
            tools:ignore="TouchTargetSizeCheck" />
        <CheckBox
            android:id="@+id/m0503_chb02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Silver"
            android:buttonTint="@color/purple_500"
            android:text="@string/m0503_chb02"
            android:textSize="@dimen/fontsize"
            tools:ignore="TouchTargetSizeCheck" />
        <CheckBox
            android:id="@+id/m0503_chb03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Silver"
            android:buttonTint="@color/purple_500"
            android:text="@string/m0503_chb03"
            android:textSize="@dimen/fontsize"
            tools:ignore="TouchTargetSizeCheck" />
        <CheckBox
            android:id="@+id/m0503_chb04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Silver"
            android:buttonTint="@color/purple_500"
            android:text="@string/m0503_chb04"
            android:textSize="@dimen/fontsize"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/m0503_b001"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="@dimen/p20"
            android:background="@color/Yellow"
            android:paddingTop="@dimen/p10"
            android:text="@string/m0503_b001"
            android:textSize="@dimen/fontsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/m0503_t001"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="@dimen/p20"
            android:background="@color/Silver"
            android:text="@string/m0503_t001"
            android:textSize="@dimen/fontsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/m0503_t002"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/p50"
            android:gravity="end"
            android:text="@string/yu_chen"
            android:textSize="@dimen/fontsize"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>